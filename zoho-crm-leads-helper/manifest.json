{
  "manifest_version": 3,
  "name": "BUttons for Zoho CRM",
  "description": "E-mail/Whatsapp a lead or selection of leads",
  "homepage_url": "https://twfflours.com",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "BUttons for Zoho CRM",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://crm.zoho.in/*", "http://crm.zoho.in/*"],
      "js": ["js/crm-popup.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["activeTab", "scripting", "storage"]
}
